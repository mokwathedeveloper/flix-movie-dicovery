{
  "name": "flix-movie-discovery",
  "version": "1.0.0",
  "description": "A comprehensive movie and TV show discovery platform with advanced search, personalized recommendations, and watchlist management",
  "type": "module",
  "private": false,
  "author": "FLIX Development Team",
  "license": "MIT",
  "homepage": "https://github.com/mokwathedeveloper/flix-movie-discovery#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mokwathedeveloper/flix-movie-discovery.git"
  },
  "bugs": {
    "url": "https://github.com/mokwathedeveloper/flix-movie-discovery/issues"
  },
  "keywords": [
    "movie",
    "tv-shows",
    "discovery",
    "watchlist",
    "entertainment",
    "react",
    "pwa",
    "tmdb",
    "streaming"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "dependencies": {
    "axios": "^1.6.2",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "^6.20.1",
    "react-window": "^1.8.11",
    "react-window-infinite-loader": "^1.0.10"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.5",
    "vite": "^4.5.0",
    "vitest": "^1.0.4"
  }
}
