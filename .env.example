# FLIX Movie Discovery - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Required API Keys
# Get your TMDB API key from: https://www.themoviedb.org/settings/api
VITE_TMDB_API_KEY=your_tmdb_api_key_here
VITE_TMDB_BASE_URL=https://api.themoviedb.org/3
VITE_TMDB_IMAGE_BASE_URL=https://image.tmdb.org/t/p

# Get your OMDB API key from: http://www.omdbapi.com/apikey.aspx
VITE_OMDB_API_KEY=your_omdb_api_key_here
VITE_OMDB_BASE_URL=http://www.omdbapi.com

# App Configuration
VITE_APP_NAME=FLIX Movie Discovery

# Optional: Push Notifications (VAPID keys)
# Generate VAPID keys for push notifications
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VITE_VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Optional: Analytics
# Google Analytics tracking ID
VITE_GA_TRACKING_ID=your_google_analytics_id_here

# Optional: Error Tracking
# Sentry DSN for error tracking
VITE_SENTRY_DSN=your_sentry_dsn_here

# Optional: Feature Flags
# Enable/disable specific features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_EXPORT=true

# Optional: Cache Configuration
# Cache duration in milliseconds
VITE_CACHE_DURATION=300000

# Optional: Rate Limiting
# API request limits
VITE_TMDB_RATE_LIMIT=40
VITE_OMDB_RATE_LIMIT=1000
